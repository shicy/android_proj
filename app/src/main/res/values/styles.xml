<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:clipToPadding">true</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">#038c8f</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/app_primary</item>
    </style>

    <!-- SecretActivity button styles -->
    <style name="secret_main_btn_row">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="secret_main_btn_wrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="secret_main_button">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/bg_secret_main_btn</item>
    </style>

</resources>
